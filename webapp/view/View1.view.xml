<mvc:View xmlns:html="http://www.w3.org/1999/xhtml" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:core="sap.ui.core"
	xmlns:l="sap.ui.layout" xmlns:f="sap.ui.layout.form" controllerName="com.patsDecodeEncodeBase64.controller.View1" displayBlock="true">
	<App>
		<pages>
			<Page title="Base 64 Encode/Decode">
				<content>
					<f:SimpleForm id="SimpleFormDisplay354wideDual" editable="true" layout="ResponsiveGridLayout"  labelSpanXL="4" labelSpanL="4" labelSpanM="4"
						labelSpanS="12" adjustLabelSpan="false" emptySpanXL="6" emptySpanL="6" emptySpanM="0" emptySpanS="0" columnsXL="2" columnsL="1" columnsM="1"
						singleContainerFullSize="false">
						<f:content>
							<core:Title text="Encode"/>
							<Label text="User" id="__label0"/>
							<Input id="user" required="true"/>
							<Label text="Password" id="__label1"/>
							<Input id="password" type="Password"  required="true"/>
							<Label/>
						
							<Button id="encode" text="Encode" press="onEncode"  />
							<!--<Label text="Result" id="__label2"/>-->
							<!--<Text id="result"/>-->
							<core:Title text="Decode"/>
							<Label text="Encoded String" id="__label3"/>
							<Input id="encoded" required="true"/>
							<Label/>
							<Button id="decode" text="Encode" press="onDecode"/>
							<!--<Label text="Result" id="__label4"/>-->
							<!--<Text id="result1"/>-->
						</f:content>
					</f:SimpleForm>
				</content>
			</Page>
		</pages>
	</App>
</mvc:View>